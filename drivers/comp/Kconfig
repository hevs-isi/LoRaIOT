menuconfig COMP
	bool
	prompt "Comparator Drivers"
	default n
	help
	  Include Comparator drivers in system config

if COMP

config SYS_LOG_COMP_LEVEL
	int
	prompt "Comparator drivers log level"
	default 0
	depends on SYS_LOG
	help
	  Sets log level for COMP drivers

	  Levels are:

	  - 0 OFF, do not write

	  - 1 ERROR, only write SYS_LOG_ERR

	  - 2 WARNING, write SYS_LOG_WRN in addition to previous level

	  - 3 INFO, write SYS_LOG_INF in addition to previous levels

	  - 4 DEBUG, write SYS_LOG_DBG in addition to previous levels

source "drivers/comp/Kconfig.nrf5"

endif # COMP
