/dts-v1/;
#include <nordic/nrf52840.dtsi>

/ {
	model = "HEI LoRaIoT Board";
	compatible = "nordic,pca10056-dk", "nordic,nrf52840-qiaa",
		     "nordic,nrf52840";

	chosen {
		zephyr,uart-pipe = &uart0;
#ifdef CONFIG_MCUMGR_SMP_UART
		zephyr,uart-mcumgr = &uart0;
#endif
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};
};

&uart0 {
	compatible = "nordic,nrf-uart";
	current-speed = <115200>;
	status = "ok";
};

&i2c0 {
	status = "ok";
	clock-frequency = <I2C_BITRATE_FAST>;
    
    tca9546a: tca9546a@74 {
        compatible = "ti,tca9546a";
        reg = <0x74>;
        label = "TCA9546A";
    };
    
    shtc1: shtc1@70 {
        compatible = "sensirion,shtc1";
        reg = <0x70>;
        label = "SHTC1";
    };
    
    opt3002: opt3002@44 {
        compatible = "ti,opt3002";
        reg = <0x44>;
        label = "OPT3002";
    };
    
    ccs811: ccs811@2d {
        compatible = "ams,ccs811";
        reg = <0x2d>;
        label = "CCS811";
    };
    
    pac1934: pac1934@10 {
        compatible = "microchip,pac1934";
        reg = <0x10>;
        label = "PAC1934";
    };
    
};

&i2c1 {
	status = "ok";
};

&flash0 {
	/*
	 * For more information, see:
	 * http://docs.zephyrproject.org/devices/dts/flash_partitions.html
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x000000000 0x0000C000>;
		};
		slot0_partition: partition@c000 {
			label = "image-0";
			reg = <0x0000C000 0x000069000>;
		};
		slot1_partition: partition@75000 {
			label = "image-1";
			reg = <0x00075000 0x000069000>;
		};
		scratch_partition: partition@de000 {
			label = "image-scratch";
			reg = <0x000de000 0x0001e000>;
		};

#if defined(CONFIG_FS_FLASH_STORAGE_PARTITION)
		storage_partition: partition@fc000 {
			label = "storage";
			reg = <0x000fc000 0x00004000>;
		};
#endif
	};
};

&usbd {
	compatible = "nordic,nrf-usbd";
	status = "ok";
};
