# SPDX-License-Identifier: Apache-2.0

config  BOARD_NRF52840_LORAIOT
	bool "NRF52840 LORAIOT"
	select HAS_DTS_I2C
    select HAS_DTS_I2C_DEVICE
    select HAS_NORDIC_DRIVERS
    # TODO: find why LPCOMP can be selected only here
    select NRFX_LPCOMP
	depends on SOC_NRF52840_QIAA
